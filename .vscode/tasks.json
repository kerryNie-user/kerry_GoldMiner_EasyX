{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件（多字节字符集）",
            "command": "C:\\TDM-GCC\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "C:\\path\\to\\easyx\\include",  // 替换为你的 EasyX 头文件路径
                "-L",
                "C:\\path\\to\\easyx\\lib",      // 替换为你的 EasyX 库文件路径
                "-leasyx",
                "-luuid",
                "-lgdi32",
                "-limm32",
                "-lole32",
                "-loleaut32",
                "-lmsimg32",
                "-lwinmm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}